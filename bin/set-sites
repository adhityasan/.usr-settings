#!/bin/bash

#set available sites and hosts
sudo cp /home/$USER/.usr-settings/sites-available/* /etc/apache2/;

sudo chown kaonashi:kaonashi /var/www/html;
mkdir /var/www/html/Docotel;
mkdir /var/www/html/Learn;
mkdir /var/www/html/Project;
mkdir /var/www/html/localhost;

#enabling sites
sudo service apache2 start
sudo service apache2 status

#change localhost default
sudo a2dissite 000-default.conf
sudo service apache2 reload

sudo a2ensite 000-default.conf


#reload to activate new settings
sudo service apache2 reload

echo ""
echo " ======= localhost sites and hosts has enables "
echo " ======= Other localSite has Set, but not enabled yet "
echo ""
ls /etc/apache2/sites-available/;
sleep 2s;
